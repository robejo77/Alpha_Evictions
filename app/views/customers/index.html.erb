<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

<h1>Customers</h1>
<div class="modals">
    <!-- Button HTML (to Trigger Modal) -->
    <a href="#newcustomer" class="btn btn-lg btn-primary" data-toggle="modal">New Customer</a>
    
    <!-- Modal HTML -->
    <div id="newcustomer" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Add New Customer</h4>
                </div>
                <div class="modal-body">
                    <p class="text-warning"><strong>** IF YOU DO NOT SAVE ALL CHANGES WILL BE LOST **</strong></p>

                   <%= render 'form' %>
                </div>

            </div>
        </div>
    </div>
    <div id="editcustomer" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Edit Customer</h4>
                </div>
                <div class="modal-body">
                    <p class="text-warning"><strong>** IF YOU DO NOT SAVE ALL CHANGES WILL BE LOST **</strong></p>

                    <%= render template: 'customers/edit' %>
                </div>

            </div>
        </div>
    </div>
</div> 

          <h2 class="sub-header">Section title</h2>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Company</th>
                  <th>Contact</th>
                  <th>Address</th>
                  <th>Suite</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Zip</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th>Fax</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                  <tr>
                    <td><%= customer.id %></td>
                    <td><%= customer.company %></td>
                    <td><%= customer.contact %></td>
                    <td><%= customer.address %></td>
                    <td><%= customer.suite %></td>
                    <td><%= customer.city %></td>
                    <td><%= customer.state %></td>
                    <td><%= customer.zip %></td>
                    <td><%= customer.phone %></td>
                    <td><%= customer.email %></td>
                    <td><%= customer.fax %></td>
                    <td><%= link_to 'Show', customer, data: { toggle: "modal", target: "#editcustomer" },class: "btn btn-default btn-xs" %> </td>
                    <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-default btn-xs" %></td>
                    <td><%= link_to 'Destroy', customer, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>




